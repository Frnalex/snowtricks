{% extends 'base.html.twig' %}

{% block title %}
	Connexion
{% endblock %}

{% block body %}
	<h1>Connexion</h1>

	{{ form_start(formView) }}

	{% if error %}
		<p>{{error.message}}</p>
	{% endif %}

	<div>
		{{ form_row(formView.email) }}
	</div>

	<div>
		{{ form_row(formView.password) }}
	</div>

	<button type="submit">Connexion</button>

	{{ form_end(formView) }}
{% endblock %}
