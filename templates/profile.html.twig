{% extends "base.html.twig" %}

{% block title %}
	Profil
{% endblock %}

{% block body %}


	<h1>Page de profil</h1>

	{% if app.user.profilePicture %}
		<h2>Photo de profil</h2>
		<img src="{{ asset('uploads/' ~ app.user.profilePicture.name) }}" alt="{{app.user.profilePicture.alt}}">
	{% endif %}

	{{ form_start(imageForm) }}

	{{ form_widget(imageForm._token)}}

	{{ form_row(imageForm.file) }}

	<button type="submit">Envoyer</button>

	{{ form_end(imageForm, {render_rest: false}) }}

{% endblock %}
